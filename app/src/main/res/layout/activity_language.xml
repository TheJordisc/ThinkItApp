<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="net.xeill.elpuig.thinkitapp.view.LanguageActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark">

        <android.support.v7.widget.AppCompatTextView
            android:drawableStart="@drawable/web"
            android:drawablePadding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_language_title"
            android:layout_gravity="center"
            android:fontFamily="@font/boogaloo"
            android:textSize="30sp"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:id="@+id/toolbar_title" />
    </android.support.v7.widget.Toolbar>

    <VideoView
        android:id="@+id/bg_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/my_toolbar"
        app:srcCompat="@drawable/logo"
        tools:ignore="ContentDescription" />

    <GridLayout
        android:id="@+id/GridLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:columnCount="2"
        android:orientation="horizontal"
        android:padding="5dp"
        android:rowCount="4"
        app:layout_constraintBottom_toBottomOf="@+id/bg_video"
        app:layout_constraintEnd_toEndOf="@+id/bg_video"
        app:layout_constraintStart_toStartOf="@+id/bg_video"
        app:layout_constraintTop_toBottomOf="@+id/imageView2">

        <ImageButton
            android:id="@+id/catButton1"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="start|top"
            android:layout_row="0"
            android:adjustViewBounds="true"
            android:background="?android:selectableItemBackground"
            android:padding="10dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/catalonia_flag"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/catala"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_row="1"
            android:text="@string/ca_flag" />

        <ImageButton
            android:id="@+id/esButton2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="start|top"
            android:layout_row="0"
            android:adjustViewBounds="true"
            android:background="?android:selectableItemBackground"
            android:padding="10dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/spain_flag"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/espanol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_row="1"
            android:text="@string/es_flag" />

        <ImageButton
            android:id="@+id/itButton3"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="start|top"
            android:layout_row="2"
            android:adjustViewBounds="true"
            android:background="?android:selectableItemBackground"
            android:padding="10dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/italia_flag"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/italiano"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="center"
            android:layout_row="3"
            android:text="@string/it_flag" />

        <ImageButton
            android:id="@+id/ukButton4"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="start|top"
            android:layout_row="2"
            android:adjustViewBounds="true"
            android:background="?android:selectableItemBackground"
            android:padding="10dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/uk_flag"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/uk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="center"
            android:layout_row="3"
            android:text="@string/uk_flag" />
    </GridLayout>

</android.support.constraint.ConstraintLayout>