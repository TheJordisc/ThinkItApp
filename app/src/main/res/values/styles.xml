<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="KeyboardButton" parent="Base.TextAppearance.AppCompat.Button">
        <item name="backgroundTint">@android:color/holo_orange_light</item>
    </style>

    <style name="MainMenuFAB" parent="Widget.Design.FloatingActionButton">
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="lifelineButton" parent="Base.TextAppearance.AppCompat.Button">
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="tutorial_title_style" parent="@android:style/Widget.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowRadius">40</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="operator_box">
        <item name="android:background">@drawable/square_back_normal</item>
        <item name="android:color">@android:color/black</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="question_box">
        <item name="android:background">@drawable/square_back_question</item>
        <item name="android:color">@color/color_question</item>
        <item name="android:textSize">60sp</item>
    </style>

</resources>
