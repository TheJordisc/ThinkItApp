<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.xeill.elpuig.thinkitapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity
            android:name=".view.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.MathsActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".view.MathsTutorialActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.LanguageActivity"
            android:screenOrientation="portrait"
            android:parentActivityName="net.xeill.elpuig.thinkitapp.view.MainActivity" >

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="net.xeill.elpuig.thinkitapp.view.MainActivity" />

        </activity>
        <activity
            android:name=".view.HelpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.ScoreActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".view.ResultActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>