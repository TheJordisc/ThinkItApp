    <style name="MainMenuFAB" parent="Widget.Design.FloatingActionButton">
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="lifelineButton" parent="Base.TextAppearance.AppCompat.Button">
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>

</resources>
